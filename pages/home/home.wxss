/* pages/home/home.wxss */

/*轮播图*/

swiper {
  margin-top: 0px;
  height: 380rpx;
}

.slide-image {
  width: 750rpx;
  height: 450rpx;
}

/*货架分类*/

.shelf-nav {
  display: flex; /*设置 display: flex; 将它变为 flex 布局的元素*/
  flex-wrap: wrap; /*当子元素总宽度超过父元素宽度时换行显示*/
  padding: 30rpx;
  font-size: 9pt;
}

.shelf-nav-item {
  width: 25%; /*因为每行显示 4 个货架，所以宽度设置为 25%*/
  text-align: center; /*让它中间的图片和标题居中显示*/
  margin:10px 0;
}

.shelf-nav-item__image {
  width: 64px; /*在视觉稿中量取图片宽高为 130px*/
  height: 64px; /*于是设置 width 和 height 都设置为130rpx*/
  /* border-radius: 50%; 把图片设置成圆形 */
  /* border: 1px solid #d9d9d9; 加上外边框 */
}

.shelf-nav-item__text {
    display: block;
}

/*主题*/

.scroll-view-nav {
  display: flex; /*设置 display: flex; 将它变为 flex 布局的元素*/
  flex-wrap: wrap; /*当子元素总宽度超过父元素宽度时换行显示*/
  padding: 0rpx 0rpx 30rpx 30rpx;
}

.scroll-view_H {
    height: 200rpx; 
    white-space: nowrap;   
    display: block; 
}

.scroll-view-item_H {
    height: auto;
    width: auto;
    display: inline-block;
    padding: 0rpx 30rpx 0rpx 0rpx;
}

.scroll-view-item__image {
  height: 200rpx;
  width: 500rpx;
  border-radius: 2.5%; /*把图片设置成圆形*/
}

/*货架列表*/
.product-list {
  padding-top: 20rpx;
}

.product-card {
  width: 50%;
  display: inline-block;
  text-align: center;
  margin-bottom: 26rpx;
}

.product-cover {
  height: 300rpx;
  width: 300rpx;
}
.price-view {
  padding-left: 15rpx;
  text-align: left;
}

.product-title {
    text-overflow: ellipsis;
    padding-left: 40rpx;
    padding-top: 8rpx;
    text-align: left;
    width: 300rpx;
    overflow: hidden;
    word-wrap: break-word;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    font-size: 9pt;
    line-height: 35rpx;
}
.product-price {
  width: 100rpx;
  white-space:nowrap;
  display: inline-block;
  text-align: left;
  font-size: 10pt;
  padding: 20rpx 0rpx 0rpx 20rpx;
  color: red;
}
.product-wasPrice {
  font-size: 9pt;
  color: lightgrey;
  text-decoration: line-through;
}

.list_header_left image {
  width: 80rpx;
  height: 80rpx;
  margin-right: 10rpx;
  float: left;
  border-radius: 40rpx;
  overflow: hidden;
}

.list_header view {
  float: left;
  line-height: 80rpx;
  color: #1e1e1e;
  font-size: 16px;
}

.list_header  .list_header_right {
  float: right;
  color: #999;
  font-size: 12px;
}

.list_header {
  padding-bottom: 18rpx;
  overflow: hidden;
}

.content {
  font-size: 14px;
}

.img-content {
  margin: 20rpx 0;
}


.shelf-article {
  display: flex; /*设置 display: flex; 将它变为 flex 布局的元素*/
  flex-wrap: wrap; /*当子元素总宽度超过父元素宽度时换行显示*/
  padding: 30rpx 0;
  font-size: 9pt;
}

.shelf-article-item {
  width: 33%; /*因为每行显示 4 个货架，所以宽度设置为 33%*/
  margin-bottom: 20rpx;
  text-align: center; /*让它中间的图片和标题居中显示*/
}

.shelf-article-item__image {
  width: 200rpx;
  height: 200rpx;
}

.content-text {
  word-wrap:break-word;
  word-break:break-all;
  /* width:680rpx;
  height: 44rpx;
  padding-top: 16rpx;
  padding-left: 40rpx; 
  padding-right: 30rpx;
  font-size: 28rpx; */
  color: #666666;
  /* line-height: 45rpx; */
  text-overflow: ellipsis;
  display: -webkit-box; /** 对象作为伸缩盒子模型显示 **/
  -webkit-box-orient: vertical; /** 设置或检索伸缩盒对象的子元素的排列方式 **/
  -webkit-line-clamp: 5; /** 显示的行数 **/
  overflow: hidden;  /** 隐藏超出的内容 **/
}

.bottom-enter-btn {
  position: fixed;
  right: 25rpx;
  width: 116rpx;
  height: 116rpx;
  bottom: 25rpx;
  z-index: 1;
}

.bottom-message-btn {
  position: fixed;
  right: 29rpx;
  width: 104rpx;
  height: 103rpx;
  bottom: 135rpx;
  z-index: 1;
}

.image-text {
  width:200rpx;
  height:200rpx;
  background-color:rgba(0,0,0,0.4);
  color:white;
  text-align:center;
  font-size:45rpx;
  position:absolute;
  right:51rpx;
}