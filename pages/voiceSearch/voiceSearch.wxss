/* pages/findMyItem/findMyItem.wxss */

.search-wrap {
  display: flex;
  align-items: center;
  padding-left: 20rpx;
  padding-top: 20rpx;
}

.input-wrap {
  display: flex;
  align-items: center;
  background: #f4f4f4;
  padding-left: 20rpx;
  padding-right: 20rpx;
  border-radius: 44rpx;
  height: 80rpx;
  width: 566rpx;
}

.search-input {
  padding-left: 20rpx;
  font-size: 30rpx;
  width: 430rpx;
}

.search-icon {
  width: 39rpx;
  height: 39rpx;
}

.voice-icon {
  width: 39rpx;
  height: 51rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.cancle-text {
  font-size: 30rpx;
  color: #999;
  padding:15rpx 28rpx;
}
.cancle-text:active{
  color:#1a75cf;
}

/* 语音搜索页 */

.hot-Search {
  text-align: center;
  padding-top: 45rpx;
}

.hot-search-title {
  font-size: 32rpx;
}

.hot-search-item {
  font-size: 30rpx;
  color: #707070;
}

.voice-btn-wrap {
  position: fixed;
  bottom: 0;
  text-align: center;
  width: 100%;
  height: 140rpx;
  background: #fafafa;
}

.voice-btn {
  width: 600rpx;
  height: 70rpx;
  border: 1px solid #707070;
  border-radius: 40rpx;
}

.voice-on-icon {
  width: 36rpx;
  height: 46rpx;
  margin-right: 40rpx;
}

.voice-push-icon {
  width: 86rpx;
  height: 46rpx;
  margin-right: 20rpx;
}

.voice-btn-text {
  font-size: 30rpx;
  color: #707070;
}

.tips-text {
  font-size: 28rpx;
  position: absolute;
  top: -60rpx;
}

.animated {
  animation-duration: 0.3s;
  animation-fill-mode: both;
  animation-timing-function: ease-in-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translate3d(0, 100%, 0);
    transform: scale(2);
  }

  to {
    opacity: 1;
    transform: translate3d(0, 0, 0);
    transform: scale(1);
  }
}

.fadeInUp {
  animation-name: fadeInUp;
}
